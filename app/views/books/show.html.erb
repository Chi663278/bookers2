<%= render 'list', user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody><tr>
          <td>
            <%= link_to user_path(@books.user.id) do %>
              <%= image_tag @books.user.get_profile_image(100,100) %><br><%= @books.user.name %>
            <% end %>
          </td>
          <td><%= @books.title %></td>
          <td><%= @books.caption %></td>
        </tr></tbody>
      </table>
    </div>

  </div>
</div>
